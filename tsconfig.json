{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "index.ts"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit" : false,
        "skipTemplateCodegen": true
    }
}